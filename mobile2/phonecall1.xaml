<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile2.phonecall1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Button x:Name="sms_btn" Text="Saada sms sõbrale" Clicked="sms_btn_Clicked"></Button>
            <Button x:Name="call_btn" Text="Helista sõbrale" Clicked="call_btn_Clicked"></Button>
            <Button x:Name="mail_btn" Text="Kirjuta kirja sõbrale" Clicked="mail_btn_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>